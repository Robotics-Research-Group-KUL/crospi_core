{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$id":"kuka_iiwa_driver.json",
    "type":"object",
    "properties":{
        "is-kuka_iiwa_driver" : {
            "description":"To indicate that the task will be executed using a kuka iiwa robot.",
            "type":"boolean",
            "default":true
        }
    },
    "required":["is-kuka_iiwa_driver"],
    "additionalProperties": true,
    "dependencies":{
        "is-kuka_iiwa_driver":{
          "required":["ip_address", "fri_port", "periodicity"],
          "properties":{
                "ip_address" : {
                    "description":"IP address of the robot using Ipv4 format.",
                    "type":"string",
                    "pattern": "^(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])\\.(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[1-9]?[0-9])$",
                    "default": "192.168.1.1"
                },
                "fri_port" : {
                    "description":"FRI port number (related to communication).",
                    "type":"number",
                    "default": 30200,
                    "minimum": 0
                },
                "periodicity" : {
                    "description":"Periodicity in which the driver runs. For the KUKA iiwa this needs to be zero (i.e. does not sleep at a fixed time) since it synchronizes with the robot controller.",
                    "type":"number",
                    "const":0
                }
          }
        }
      }
}