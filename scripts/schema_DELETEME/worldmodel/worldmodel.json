{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./worldmodel.json",
    "id" : "worldmodel",
    "title": "World model",
    "type": "object",
    "properties": {
        "nodes" : {
            "title": "Nodes",
            "type": "array",
            "format": "tabs",
            "items": {
                "headerTemplate": "{{self.name}}",
                "$ref": "node.json"
            },
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "collapsed" : true
            }
        },       
        "info1": {
            "type": "info",
            "title" : "",
            "description": "<hr></hr>  "
        },
        "connections" : {
            "title": "Connections",
            "type": "object",
            "additionalProperties": {
                "$ref": "connection.json"
            }
        },
        "jointstates" : {
            "title":"Joint states",
            "type" : "array",
            "$ref" : "jointstates.json",
            "options": {
                "disable_collapse": false,
                "disable_edit_json": false,
                "collapsed" : true
            }
        }
    },
    "required" : [
        "nodes","connections","jointstates"
    ],
    "additionalProperties" : true,
    "options" : {
        "disable_collapse" : false,
        "disable_edit_json": true,
        "disable_properties": true,
        "collapsed" : true
    }
}