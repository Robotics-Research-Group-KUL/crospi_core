{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./contour.json",
    "title": "Contour",
    "type": "object",
    "properties": {
        "degree": {
            "title": "Degree",
            "type": "integer",
            "minimum": 1
        },
        "cp": {
            "title": "Control points",
            "type": "array",
            "format": "table",
            "items": {
                "type": "object",
                "format": "grid-strict",
                "properties": {
                    "x": {
                        "type": "number",
                        "options" : {
                            "grid_columns": 3
                        }
                    },
                    "y": {
                        "type": "number",
                        "options" : {
                            "grid_columns": 3
                        }                        
                    }
                }
            },
            "required": [
                "degree",
                "cp"
            ],
            "additionalProperties": false            
        }
    },
    "required": [
        "degree",
        "cp"
    ],
    "additionalProperties": false,
    "options": {
        "disable_collapse": true,
        "disable_edit_json": true,
        "disable_properties": true
    }
}