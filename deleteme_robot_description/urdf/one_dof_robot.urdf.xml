<?xml version="1.0"?>

<robot name="r2d2">

    <link name="world">
        <visual>
            <origin xyz="0 0 -0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
    </link> 

    <joint name="joint1" type="continuous">
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <parent link="world"/>
        <child link="shoulder_link"/>
        <axis xyz="0 0 1"/>
        <!-- <limit effort="39" velocity="1.3963"/> -->
    </joint>

    <link name="shoulder_link">
        <visual>
        <origin xyz="0.5 0 0" />
        <geometry>
            <box size="1.0 .10 0.01" />
        </geometry>
        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>
        </visual>
    </link> 

</robot>