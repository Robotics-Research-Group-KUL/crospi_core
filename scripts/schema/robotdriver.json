{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$id": "robotdriver.json",
    "title": "Robotdriver",
    "description": "Robotdriver interfaces robot hardware with eTaSL and runs in a separate thread, communicating via shared memory for reduced latency",
    "oneOf": [
        {
            "$ref":"kuka_iiwa_driver.json"
        },
        {
            "$ref":"ur10erobotdriver.json"
        },
        {
            "type":"object",
            "properties":{
                "is-no_driver" : {
                    "description":"To indicate that there is no available driver yet for the robot and therefore the tasks can only be executed in simulation",
                    "type":"boolean",
                    "default":true
                },
                "name_expr_joint_vel" : {
                    "type":"string",
                    "default": "joint_vel"
                },
                "name_expr_joint_current" : {
                    "type":"string",
                    "default": "joint_current"
                },
                "name_expr_joint_torque" : {
                    "type":"string",
                    "default": "joint_torque"
                },
                "name_expr_cartesian_pos" : {
                    "type":"string",
                    "default": "task_frame_pos"
                },
                "name_expr_cartesian_quat" : {
                    "type":"string",
                    "default": "task_frame_quat"
                },
                "name_expr_cartesian_twist" : {
                    "type":"string",
                    "default": "task_frame_twist"
                },
                "name_expr_cartesian_wrench" : {
                    "description":"Name of the expression that will be used to put the joint torques coming from this driver. This name can be then used in etasl with selected_name = ctx:createInputChannelWrench('selected_name')",
                    "type":"string",
                    "default": "task_frame_wrench"
                },
                "name_expr_base_pos" : {
                    "type":"string",
                    "default": "base_pos"
                },
                "name_expr_base_quat" : {
                    "type":"string",
                    "default": "base_quat"
                },
                "name_expr_base_twist" : {
                    "type":"string",
                    "default": "base_twist"
                }
            },
            "required":["is-no_driver"]
        }
    ]
}
