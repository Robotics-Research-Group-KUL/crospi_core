{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./jointstates.json",
    "title": "Joint states",
    "type": "array",
    "format": "table",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "values": {
                "type": "array",
                "format": "table",
                "items": {
                    "type": "object",
                    "format": "grid-strict",
                    "headerTemplate": "{{self.name}}",
                    "properties": {
                        "name": {
                            "title": "Name",
                            "type": "string"
                        },
                        "value": {
                            "title": "Initial value",
                            "type": "number",
                            "default": 0
                        }
                    },
                    "required": [
                        "name",
                        "value"
                    ]
                }
            }
        },
        "options": {
            "disable_edit_json": true,
            "disable_properties": true
        },
        "additionalProperties": false
    }
}
