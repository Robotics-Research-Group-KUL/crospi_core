{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$id": "blackboard-schema.json",
    "title": "Blackboard",
    "type": "object",
    "description": "Schema defining configuration properties for the crospi_node",
    "properties": {
        "blackboard": {
            "type": "object",
            "properties": {
                "etasl": {
                    "$ref": "etasl.json"
                },
                "robot": {
                    "$ref": "robot.json"
                },
                "iohandlers": {
                    "$ref": "iohandlers.json"
                }
            },
            "required": [ "etasl", "robot"]
        }
    },
    "required": [
        "blackboard"
    ],
    "additionalProperties": true
}
